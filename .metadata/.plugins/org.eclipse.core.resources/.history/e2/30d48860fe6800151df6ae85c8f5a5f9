package sudoku;

public class SudokuSkeleton {

	private int[] candidateSolution;

	/**
	 * Constructor del sudoku
	 * 
	 * @param sudokuMatrix
	 */
	public SudokuSkeleton(int[] sudokuMatrix) {
		this.candidateSolution = sudokuMatrix;
	}

	/**
	 * 
	 * @return sudokuMatrix devuelve el sudoku en forma de matriz
	 */
	public int[] getSudokuMatrix() {
		return candidateSolution;
	}

	/**
	 * @return matrixString representa la matriz en forma de string con los
	 *         elementos unidos
	 */
	public String toString() {

		String matrixString = "";

		for (int i = 0; i < candidateSolution.length; i++) {
			if (candidateSolution[i] < 1) {
				matrixString += " ";
			} else {
				matrixString += candidateSolution[i];
			}
		}
		return matrixString;
	}
}
