package source;
 
import static org.junit.Assert.*;
 
import java.util.Arrays;
import java.util.Collection;
 
import org.junit.Test;
import org.junit.runners.Parameterized;
import org.junit.runners.Parameterized.Parameters;
/***
 * 
 * @author Ana Isabel Lopera Martínez
 *
 */
 
@RunWith(Parameterized.class)
public class SudokuParameterizedTest {
    private int verify_code;
    private String candidate_solution;
    private Sudoku sudoku = new Sudoku();
     
    //Constructor class
    public SudokuParameterizedTest(int verify_code, String candidate_solution){
        this.verify_code = verify_code;
        this.candidate_solution = candidate_solution;
    }
 
    @Parameters(name= "Test {index} : Sudoku.verify({1} = {0})")
    public static Collection<Object[]> myData() {
        return Arrays.asList(new Object[][] { 
                // Solución formada por carácteres no válidos
                {-1,"asdggd"},
                // Solución con longitud incorrecta
                {-1,"12345"},
                // Solución con números negativos
                {-1,"-123456789123456789123456789123456789123456789123456789123456789123456789123456789"},
                // Solución que no sigue la regla 2 (dígito repetido en el mismo subgrid: fila 2, columna 2)
                {-2,"825739164481856792796412853372581649618394275954267318249178536567923481183645927"},
                // Solución que no sigue la regla 3 (dígito repetido en la misma fila: fila 9, columna 6)
                {-3,"825739164431856792796412853372581649618394275954267318249178536567923481183642927"},
                // Solución que no sigue la regla 3 (dígito repetido en la misma fila: fila 1, columna 3)
                {-3,"825839164831856792796412853372581649618394275954267318249178536567923481183645927"},
                // Solución que no sigue la regla 4 (dígito repetido en la misma columna: fila 2, columna 1)
                {-4,"825739164831856792796412853372581649618394275954267318249178536567923481183645927"},
                // Solución que no sigue la regla 4 (dígito repetido en la misma columna: fila 9, columna 9)
                {-4,"825739164431856792796412853372581649618394275954267318249178536567923481583645927"},
                // Solución correcta
                {0,"825739164431856792796412853372581649618394275954267318249178536567923481183645927"},
        });
    }
     
    @Test
    public void checkValue(){
        assertEquals(verify_code, sudoku.verify(candidate_solution));
    }
 
}