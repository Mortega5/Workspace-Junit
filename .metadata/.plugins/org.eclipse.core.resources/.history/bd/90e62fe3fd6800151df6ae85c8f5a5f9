package sudoku;

public class SudokuSkeleton {

	private int[] sudokuMatrix;

	/**
	 * Constructor del sudoku
	 * 
	 * @param sudokuMatrix
	 */
	public SudokuSkeleton(int[] sudokuMatrix) {
		this.sudokuMatrix = sudokuMatrix;
	}

	/**
	 * 
	 * @return sudokuMatrix devuelve el sudoku en forma de matriz
	 */
	public int[] getSudokuMatrix() {
		return sudokuMatrix;
	}

	/**
	 * @return matrixString representa la matriz en forma de string con los
	 *         elementos unidos
	 */
	public String toString() {

		String matrixString = "";

		for (int i = 0; i < sudokuMatrix.length; i++) {
			if (sudokuMatrix[i] == null) {
				matrixString += " ";
			} else {
				matrixString += sudokuMatrix[i];
			}
		}
		return matrixString;
	}
}
